# Database settings
# Choose one of: postgresql, mysql, sqlite
DB_TYPE=postgresql

# Database credentials (not needed for SQLite)
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432
DB_NAME=fastapi_template

# Security settings
# Generate a secure secret key using: openssl rand -hex 32
SECRET_KEY=your-secret-key-at-least-32-chars

# JWT settings
# Algorithm used for token signing
ALGORITHM=HS256
# Token expiration time in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Configuration
# Prefix for all API endpoints
API_V1_PREFIX=/api/v1
PROJECT_NAME=FastAPI Template

# CORS Origins
# List of origins that can access the API
# Examples:
# - Development: ["http://localhost:3000"]
# - Production: ["https://yourapp.com"]
# - Multiple: ["http://localhost:3000", "https://yourapp.com"]
BACKEND_CORS_ORIGINS=["http://localhost:3000"]

# Initial Admin User
# These credentials will be used to create the first superuser
INITIAL_SUPERUSER_EMAIL=admin@example.com
INITIAL_SUPERUSER_PASSWORD=your_secure_password_here

# Optional Settings
# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
# Maximum number of requests per minute per user
RATE_LIMIT_PER_MINUTE=100